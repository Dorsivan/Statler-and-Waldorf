@model StatlerAndWaldorf.DTO.LoginDTO

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="email" class="form-control" type="email" required />
                <sspan asp-validation-for="email" class="text-danger"></sspan>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input asp-for="password" class="form-control" type="password" required />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Signup">Not registered yet? Sign Up</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
