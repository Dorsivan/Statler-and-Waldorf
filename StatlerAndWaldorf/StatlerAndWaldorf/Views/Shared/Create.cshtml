@model StatlerAndWaldorf.Models.Reviews

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_ReviewsLayout.cshtml";
}

<h2>Create</h2>

<h4>Reviews</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            
            <div class="form-group">
                <label>Review</label>
                <input asp-for="review" class="form-control" required />
                <span asp-validation-for="review" class="text-danger"></span>
            </div>
            <div id="formBtns">
                <input type="submit" id="send" value="Send" class="btn btn-raised btn-primary">
                <input type="reset" id="cancel" value="Clear" class="btn btn-raised btn-secondary">
            </div>
        </form>
   </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
